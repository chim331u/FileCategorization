{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Hangfire": "Information",
      "FileCategorization_Api": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/data/FileCat.db",
    "HangfireConnection": "Data Source=/data/FileCat.db"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.SignalR": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/data/Log/filecategorization-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "FileCategorizationSettings": {
    "TempDirectory": "/app/Temp",
    "MlDataDirectory": "/app/Temp/MlData",
    "DatabasePath": "/data/FileCat.db",
    "LogDirectory": "/data/Log",
    "EnableBackgroundJobs": true,
    "EnableSignalR": true,
    "MaxFileSizeBytes": 52428800,
    "SupportedExtensions": [".txt", ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx", ".jpg", ".jpeg", ".png", ".gif", ".mp4", ".avi", ".mp3", ".wav"],
    "DefaultCategories": ["Document", "Image", "Video", "Audio", "Archive", "Other"]
  },
  "JWT": {
    "SecretKey": "your-jwt-secret-key-change-this-in-production",
    "Issuer": "FileCategorization.Api",
    "Audience": "FileCategorization.Web",
    "ExpiryInHours": 24
  },
  "CORS": {
    "AllowedOrigins": [
      "http://localhost",
      "https://localhost", 
      "http://localhost:80",
      "https://localhost:443"
    ],
    "AllowCredentials": true
  },
  "Hangfire": {
    "DashboardEnabled": true,
    "RequireAuthentication": false,
    "ServerName": "FileCategorization-API",
    "WorkerCount": 2,
    "Queues": ["default", "critical", "background"],
    "JobExpirationTimeout": "24:00:00",
    "QueuePollInterval": "00:00:15"
  },
  "SignalR": {
    "EnableDetailedErrors": false,
    "KeepAliveInterval": "00:00:15",
    "ClientTimeoutInterval": "00:00:30",
    "HandshakeTimeout": "00:00:15",
    "MaximumReceiveMessageSize": 32768,
    "StreamBufferCapacity": 10,
    "EnableCompression": true
  },
  "HealthChecks": {
    "Enabled": true,
    "DetailedErrors": false,
    "Timeout": "00:00:30",
    "Endpoints": {
      "Database": true,
      "Hangfire": true,
      "SignalR": true,
      "FileSystem": true
    }
  },
  "Performance": {
    "EnableResponseCaching": true,
    "EnableResponseCompression": true,
    "MaxConcurrentRequests": 100,
    "RequestTimeoutSeconds": 300,
    "EnableRequestLogging": false,
    "EnablePerformanceCounters": true
  },
  "Security": {
    "EnableHttpsRedirection": false,
    "EnableHSTS": false,
    "RequireHttps": false,
    "EnableAntiforgery": false,
    "AllowedFileTypes": [".txt", ".pdf", ".doc", ".docx", ".jpg", ".png"],
    "MaxFileUploadSize": 52428800,
    "EnableFileTypeValidation": true
  }
}