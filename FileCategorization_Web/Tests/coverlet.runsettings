<?xml version="1.0" encoding="utf-8" ?>
<RunSettings>
    <DataCollectionRunSettings>
        <DataCollectors>
            <DataCollector friendlyName="XPlat code coverage">
                <Configuration>
                    <Format>cobertura</Format>
                    <Exclude>
                        [*]*.Program
                        [*]*.Startup
                        [*.Tests]*
                        [*]*Exception*
                        [*]*.Pages.*
                        [*]*.wwwroot.*
                    </Exclude>
                    <IncludeTestAssembly>false</IncludeTestAssembly>
                    <SingleHit>false</SingleHit>
                    <UseSourceLink>true</UseSourceLink>
                    <IncludeDirectory>../Services</IncludeDirectory>
                    <IncludeDirectory>../Features</IncludeDirectory>
                    <IncludeDirectory>../Extensions</IncludeDirectory>
                </Configuration>
            </DataCollector>
        </DataCollectors>
    </DataCollectionRunSettings>
</RunSettings>